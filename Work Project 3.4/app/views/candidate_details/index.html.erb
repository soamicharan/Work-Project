<p id="notice"><%= notice %></p>

<h1>Candidate Details</h1>

<table>
  <thead>
    <tr>
      <th>S no</th>
      <th>Reg no</th>
      <th>Name</th>
      <th>Branch</th>
      <th>Email</th>
      <th>Contact no</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidate_details.each do |candidate_detail| %>
      <tr>
        <td><%= candidate_detail.s_no %></td>
        <td><%= candidate_detail.reg_no %></td>
        <td><%= candidate_detail.name %></td>
        <td><%= candidate_detail.branch %></td>
        <td><%= candidate_detail.email %></td>
        <td><%= candidate_detail.contact_no %></td>
        <td><%= candidate_detail.status %></td>
        <td><%= link_to 'Read', candidate_detail %></td>
        <td><%= link_to 'Update', edit_candidate_detail_path(candidate_detail) %></td>
        <td><%= link_to 'Delete', candidate_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

